{
  "name": "@stream-bridge/extension",
  "version": "1.3.0",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "cd ./packages/shared && tsc && cd ../content-script && tsc && cd ../popup && tsc",
    "build": "cd ./packages/content-script && npm run build && cd ../popup && npm run build",
    "dev": "cd ./packages/popup && npm run dev",
    "postinstall": "cd ./packages/shared && npm i && cd ../content-script && npm i && cd ../popup && npm i"
  },
  "author": "Maksim Serebryakov <starkmp.work@gmail.com>",
  "private": true,
  "devDependencies": {
    "@types/chrome": "^0.0.237",
    "@types/node": "^20.3.2",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/styled-components": "^5.1.26",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.3.0",
    "typescript": "^4.7.4"
  },
  "baseUrl": "",
  "browserslist": [
    "> 1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ],
  "dependencies": {
    "react-infinite-scroll-component": "^6.1.0"
  }
}
