{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*", "src/**/*.json"],
  "compilerOptions": {
    "rootDir": "src",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "@types",
    "outDir": "@types",
    "tsBuildInfoFile": "./@types/.tsbuildinfo",
    "typeRoots": ["src/types", "../../node_modules/@types", "./node_modules/@types"]
  }
}
