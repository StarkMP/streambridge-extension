{
  "manifest_version": 3,
  "name": "Stream Bridge",
  "description": "Watch your favorite streamers from another streaming services on Twitch",
  "version": "0.4.15",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "declarativeNetRequest",
    "activeTab", 
    "scripting",
    "tabs"
  ],
  "declarative_net_request" : {
    "rule_resources" : [{
      "id": "modifyHeaders",
      "enabled": true,
      "path": "modifyHeaders.json"
    }]
  },
  "host_permissions": [
    "https://www.twitch.tv/",
    "https://kick.com/",
    "https://wasd.tv/",
    "https://vkplay.live/",
    "https://trovo.live/",
    "https://api.vkplay.live/",
    "https://api-web.trovo.live/"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*", "https://vkplay.live/*", "https://kick.com/*", "https://trovo.live/*"],
      "all_frames": true,
      "js": ["index.js"],
      "css": ["index.css"]
    }
  ]
}