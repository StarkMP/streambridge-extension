{
  "manifest_version": 3,
  "name": "__MSG_project_name__",
  "description": "__MSG_project_description__",
  "version": "%version%",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "permissions": ["declarativeNetRequest", "storage"],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "modifyHeaders",
        "enabled": true,
        "path": "modifyHeaders.json"
      }
    ]
  },
  "host_permissions": [
    "https://www.twitch.tv/",
    "https://kick.com/",
    "https://wasd.tv/",
    "https://live.vkplay.ru/",
    "https://trovo.live/",
    "https://api.live.vkplay.ru/",
    "https://api-web.trovo.live/",
    "https://www.youtube.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.twitch.tv/*",
        "https://live.vkplay.ru/*",
        "https://kick.com/*",
        "https://trovo.live/*",
        "https://wasd.tv/*",
        "https://www.youtube.com/*"
      ],
      "all_frames": true,
      "js": ["content-script/index.js"],
      "css": ["content-script/index.css"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "streambridge.extension@gmail.com",
      "strict_min_version": "42.0"
    }
  }
}
